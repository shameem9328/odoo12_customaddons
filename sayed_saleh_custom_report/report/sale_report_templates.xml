        <div class="page">
            <div class="oe_structure"/>

            <div><strong>VAT NO: <span t-field="doc.company_id.vat"/></strong></div>
            <!--<div><strong>VAT ADDRESS: Flat/Shop No.0, Building 964, Road/Street 31, East Al-Eker, Block 623, The Capital, Bahrain</strong></div>-->
            <b><h5 class="text-center">
                <span t-if="doc.state not in ['draft','sent']">TAX ORDER</span>
                <span t-if="doc.state in ['draft','sent']">TAX QUOTATION</span>
            </h5></b>
            <p><strong>Customer Details:</strong></p>
            <t t-set="address_vals" t-value="[]"/>
            <!--<t t-set="tax_vals" t-value="[]"/>-->

             <t t-if="doc.partner_id.street">
                <t t-set="address_vals" t-value="address_vals + [doc.partner_id.street]"/>
             </t>
             <t t-if="doc.partner_id.street2">
                <t t-set="address_vals" t-value="address_vals + [doc.partner_id.street2]"/>
             </t>
             <t t-if="doc.partner_id.city">
                <t t-set="address_vals" t-value="address_vals + [doc.partner_id.city]"/>
             </t>
             <t t-if="doc.partner_id.zip">
                <t t-set="address_vals" t-value="address_vals + ['P.O BOX '+doc.partner_id.zip]"/>
             </t>
             <t t-if="doc.partner_id.state_id">
                <t t-set="address_vals" t-value="address_vals + [doc.partner_id.state_id.name]"/>
             </t>
             <t t-if="doc.partner_id.country_id">
                <t t-set="address_vals" t-value="address_vals + [doc.partner_id.country_id.name]"/>
             </t>
            <table class="table table-borderless table-sm o_main_table"  cellpadding="0" cellspacing="0" t-attf-style="width: 100%; border-collapse:collapse;border:1px solid black;border-radius: 10px;font-size: #{font_size_val}px;" name="customer_details_table">
                <tbody>
                    <tr>
                        <td style="width:10%;"><strong>Code:</strong></td>
                        <td style="width:45%;" colspan="3"><span t-field="doc.partner_id.ref"/></td>
                        <td style="width:5%;"></td>
                        <td style="width:15%;"><strong>Doc Ref:</strong></td>
                        <td style="width:25%;"><span t-field="doc.name"/></td>

                    </tr>
                    <tr>
                        <td><strong>Name:</strong></td>
                        <td colspan="3"><span t-field="doc.partner_id.name"/></td>
                        <td></td>
                        <!--
                        <td><strong>Doc Date:</strong></td>
                        <td><span t-field="doc.date_order"/></td>
                        -->
                        <td>
                            <t t-if="doc.date_order and doc.state in ['draft','sent']"><strong>Quotation Date:</strong></t>
                            <t t-if="doc.confirmation_date and doc.state not in ['draft','sent']"><strong>Date Ordered:</strong></t>
                        </td>
                        <td>
                            <t t-if="doc.date_order and doc.state in ['draft','sent']"><span t-field="doc.date_order"/></t>
                            <t t-if="doc.confirmation_date and doc.state not in ['draft','sent']"><span t-field="doc.confirmation_date"/></t>
                        </td>

                    </tr>
                    <tr>
                        <td><strong>Address:</strong></td>
                        <td colspan="3">
                            <p t-if="address_vals or contact_vals or doc.partner_id.vat" class="nospacing">
                                <span t-esc="', '.join(address_vals)"/>
                            </p>
                        </td>
                        <td></td>
                        <td><strong>VAT No:</strong></td>
                        <td><span t-field="doc.partner_id.vat"/></td>
                    </tr>
                    <tr>
                        <td><strong>Mobile:</strong></td>
                        <td colspan="3"><span t-field="doc.partner_id.mobile"/></td>
                        <td></td>
                        <td><strong>Phone:</strong></td>
                        <td><span t-field="doc.partner_id.phone"/></td>
                    </tr>
                    <!--
                    <tr>
                        <td><strong>Mobile:</strong></td>
                        <td style="width:12%;"><span t-field="doc.partner_id.mobile"/></td>
                        <td colspan="3"></td>
                        <td><strong>Phone:</strong></td>
                        <td><span t-field="doc.partner_id.phone"/></td>
                        <td></td>

                    </tr>
                    -->
                    <tr>
                        <td><strong>Remark:</strong></td>
                        <td colspan="3"><span t-field="doc.note"/></td>
                        <td></td>
                        <td><strong>Payment Terms:</strong></td>
                        <td><span t-field="doc.payment_term_id"/></td>
                    </tr>
                </tbody>
            </table>

            <!--
            <div class="row mt32 mb32" id="informations">

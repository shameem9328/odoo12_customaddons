            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <table class="table table-bordered table-sm o_main_table" name="sale_order_line_table" t-attf-style="width: 100%;font-size: #{font_size_val}px;">
                <thead>
                    <tr>
                        <!-- TODO: remove in master -->
                        <t t-set="colspan" t-value="7"/>
                        <th class="text-center">SN</th>
                        <th class="text-center" style="width: 300px;">Item ID - Description</th>
                        <th class="text-center">Qty</th>
                        <th class="text-center">U/M</th>
                        <th class="text-center">Unit&#160;Rate BD</th>
                        <th class="text-center">Amount&#160;Excl.&#160;VAT BD</th>
                        <!--
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            <span>Disc.(%)</span>

                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        -->
                        <th class="text-center">TAX&#160;Rate</th>
                        <th class="text-center">VAT&#160;Amount BD</th>
                        <th class="text-center">Amount&#160;Incl.&#160;VAT BD</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="sl_no" t-value="0"/>
                    <t t-foreach="doc.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <t t-set="pdt_disc" t-value="doc.discount_pdt_id()"/>
                        <t t-if="pdt_disc and line.product_id and line.product_id.id == pdt_disc.id">

                        </t>
                        <t t-else="">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <t t-set="sl_no" t-value="sl_no + 1"/>
                                <td class="text-center">
                                    <span t-esc="sl_no"/>
                                </td>
                                <td><span t-field="line.name"/></td>
                                <td class="text-right">
                                    <span t-field="line.product_uom_qty"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.product_uom"  />
                                </td>
                                <td class="text-center">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-center">
                                     <!--<span t-field="line.price_subtotal"/>-->
                                     <span t-esc="'{:,.3f}'.format(line.price_subtotal)"/>
                                </td>
                                <!--
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                -->
                                <td class="text-center">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                                <td class="text-center">
                                     <!--<span t-field="line.price_tax"/>-->
                                     <span t-esc="'{:,.3f}'.format(line.price_tax)"/>
                                </td>
                                <td class="text-center">
                                    <!--<span t-field="line.price_total"/>-->
                                    <span t-esc="'{:,.3f}'.format(line.price_total)"/>
                                </td>
                                <!--
                                <td class="text-right o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                                -->
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        </t>
                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <table class="table table-borderless table-sm o_main_table"  cellpadding="0" cellspacing="0" name="customer_details_table" t-attf-style="width: 100%; border-collapse:collapse;border:1px solid black;border-radius: 10px;font-size: #{font_size_val}px;">
                <tbody>
                    <tr>
                        <t t-if="doc.amount_disc_calculation()">
                        <td><strong>Discount:</strong></td>
                        <td><strong><span t-esc="doc.amount_disc_calculation()" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>
                        </t>
                        <td><strong>Gross Amount:</strong></td>
                        <td><strong><span t-field="doc.amount_untaxed"/></strong></td>
                        <td><strong>Total VAT:</strong></td>
                        <td><strong><span t-field="doc.amount_tax"/></strong></td>
                        <td><strong>Net Total:</strong></td>
                        <td><strong><span t-field="doc.amount_total"/></strong></td>
                    </tr>
                </tbody>
            </table>
            <!--
            <div class="clearfix">
                <div id="total" class="row" name="total">

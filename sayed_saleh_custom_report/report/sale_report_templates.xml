    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="sayed_saleh_custom_report.report_saleorder_document_sayed_saleh" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>
